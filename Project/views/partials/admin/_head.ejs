<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>cApp Admin - Users List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-size: 0.875rem;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9fafb;
            color: #374151;
        }

        .sidebar {
            width: 12rem;
            min-height: 100vh;
            border-right: 1px solid #d1d5db;
            background-color: #fff;
        }

        .sidebar .nav-link.active {
            background-color: #bfdbfe;
            border-right: 4px solid #2563eb;
            color: #2563eb;
            font-weight: 600;
        }

        .sidebar .submenu {
            padding-left: 1.5rem;
            border-left: 1px solid #d1d5db;
        }

        .sidebar .submenu .nav-link.active {
            color: #f97316;
            font-weight: 600;
        }

        .table thead th {
            background-color: #f3f4f6;
            font-weight: 600;
            font-size: 0.75rem;
            color: #2563eb;
            vertical-align: middle;
            cursor: pointer;
        }

        .table tbody td {
            vertical-align: middle;
            font-size: 0.75rem;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9fafb;
        }

        .status-active {
            background-color: #4ade80;
            color: #fff;
            font-size: 0.625rem;
            font-weight: 600;
            padding: 0.125rem 0.5rem;
            border-radius: 0.125rem;
            user-select: none;
        }

        .pagination .page-link {
            font-size: 0.75rem;
            color: #2563eb;
        }

        .pagination .page-item.active .page-link {
            background-color: #2563eb;
            border-color: #2563eb;
            color: #fff;
            font-weight: 600;
        }

        .btn-icon {
            font-size: 0.875rem;
            padding: 0.25rem 0.5rem;
            line-height: 1;
        }

        .btn-icon:hover {
            opacity: 0.8;
        }

        .topbar {
            background-color: #3b82f6;
            color: white;
            height: 3rem;
            display: flex;
            align-items: center;
            padding: 0 1rem;
            user-select: none;
        }

        .topbar .logo {
            font-weight: 600;
            font-size: 1.125rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .topbar .logo i {
            font-size: 1.25rem;
        }

        .topbar .top-icons button {
            position: relative;
            margin-left: 0.25rem;
            border: none;
            background: none;
            color: white;
            font-size: 1rem;
            cursor: pointer;
            padding: 0.25rem 0.5rem;
        }

        .topbar .top-icons button .badge {
            position: absolute;
            top: 0;
            right: 0;
            font-size: 0.625rem;
            font-weight: 700;
            border-radius: 50%;
            padding: 0.125rem 0.375rem;
            color: #1f2937;
        }

        .topbar .top-icons .messages {
            background-color: #6b7280;
        }

        .topbar .top-icons .notifications {
            background-color: #7c3aed;
        }

        .topbar .top-icons .emails {
            background-color: #16a34a;
        }

        .topbar .user-info {
            margin-left: auto;
            background-color: #2563eb;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.25rem 0.75rem;
            border-radius: 0.375rem;
            cursor: pointer;
            user-select: none;
        }

        .topbar .user-info img {
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            border: 2px solid white;
            object-fit: cover;
            filter: grayscale(100%);
        }

        .topbar .user-info .text {
            font-size: 0.75rem;
            font-weight: 600;
            color: white;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .breadcrumb-custom {
            font-size: 0.75rem;
            color: #6b7280;
            user-select: none;
        }

        .breadcrumb-custom a {
            color: #3b82f6;
            text-decoration: none;
        }

        .breadcrumb-custom a:hover {
            text-decoration: underline;
        }

        .breadcrumb-custom i {
            margin-right: 0.25rem;
        }

        .breadcrumb-custom .active {
            color: #9ca3af;
        }

        .btn-add {
            background-color: #3b82f6;
            color: white;
            font-weight: 600;
            font-size: 0.875rem;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            border: none;
            user-select: none;
        }

        .btn-add:hover {
            background-color: #2563eb;
            color: white;
        }

        .table-toolbar button {
            width: 2.25rem;
            height: 2.25rem;
            border: 1px solid #d1d5db;
            background-color: white;
            color: inherit;
            border-radius: 0.25rem;
            user-select: none;
        }

        .table-toolbar button:hover {
            background-color: #f3f4f6;
        }

        .table-toolbar i {
            font-size: 1rem;
        }

        .btn-add a {
            color: white;
            text-decoration: none;
        }

        button[title="Delete"] a {
            color: inherit;
            text-decoration: none;
        }

        button[title="Delete"] a:hover {
            color: #dc2626;
        }
    </style>
</head>

<body>
    <header class="topbar d-flex align-items-center">
        <div class="logo">
            <i class="fas fa-swirl"></i>
            cApp Admin
        </div>
        <div class="top-icons d-flex align-items-center ms-auto">
            <button>
                <div class="user-info d-flex align-items-center ms-3">
                    <div class="text">
                        <div>Welcome,</div>
                        <div class="d-flex align-items-center">
                            Jason <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
                </div>
        </div>
    </header>
    <%- include('_nav') %>