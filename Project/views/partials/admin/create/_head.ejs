<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>cApp Admin - Add Buah</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-size: 0.875rem;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9fafb;
            color: #374151;
        }

        .sidebar {
            width: 12rem;
            min-height: 100vh;
            border-right: 1px solid #d1d5db;
            background-color: #fff;
        }

        .sidebar .nav-link.active {
            background-color: #bfdbfe;
            border-right: 4px solid #2563eb;
            color: #2563eb;
            font-weight: 600;
        }

        .sidebar .submenu {
            padding-left: 1.5rem;
            border-left: 1px solid #d1d5db;
        }

        .sidebar .submenu .nav-link.active {
            color: #f97316;
            font-weight: 600;
        }

        .topbar {
            background-color: #3b82f6;
            color: white;
            height: 3rem;
            display: flex;
            align-items: center;
            padding: 0 1rem;
            user-select: none;
        }

        .topbar .logo {
            font-weight: 600;
            font-size: 1.125rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .topbar .logo i {
            font-size: 1.25rem;
        }

        .topbar .user-name {
            margin-left: auto;
            font-weight: 600;
            font-size: 0.875rem;
            user-select: none;
        }

        .btn-primary {
            background-color: #3b82f6;
            color: white;
            font-weight: 600;
            font-size: 0.875rem;
            padding: 0.375rem 1rem;
            border-radius: 0.25rem;
            border: none;
            user-select: none;
        }

        .btn-primary:hover {
            background-color: #2563eb;
            color: white;
        }

        .btn-secondary {
            background-color: #6b7280;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #4b5563;
            color: white;
        }

        .form-section {
            background-color: white;
            border-radius: 0.375rem;
            border: 1px solid #d1d5db;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

        .form-header {
            background-color: #3b82f6;
            color: white;
            padding: 0.75rem 1rem;
            border-top-left-radius: 0.375rem;
            border-top-right-radius: 0.375rem;
            font-weight: 600;
        }

        .form-body {
            padding: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
        }

        .form-control,
        .form-select {
            font-size: 0.875rem;
            padding: 0.375rem 0.75rem;
            border: 1px solid #d1d5db;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
        }

        .required-field::after {
            content: "*";
            color: #ef4444;
            margin-left: 0.25rem;
        }
    </style>
</head>

<body>
    <header class="topbar d-flex align-items-center">
        <div class="logo">
            <i class="fas fa-swirl"></i>
            cApp Admin
        </div>
        <div class="user-name">Welcome, Jason</div>
    </header>
    <div class="d-flex">
        <nav class="sidebar d-flex flex-column pt-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center" href="#">
                        <i class="fas fa-palette me-2"></i> Dashboard
                    </a>
                </li>
                <%- include('_nav') %>