        <div class="d-flex gap-1 px-3 py-2 border-bottom bg-white user-select-none table-toolbar">
            <button type="button" class="btn btn-icon" title="Search" aria-label="Search">
                <i class="fas fa-search text-primary"></i>
            </button>
            <button type="button" class="btn btn-icon" title="Print" aria-label="Print">
                <i class="fas fa-print text-secondary"></i>
            </button>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered mb-0 text-nowrap align-middle">
                <thead>
                    <tr>
                        <th scope="col" class="text-primary">
                            S.NO. <i class="fas fa-sort text-secondary"></i>
                        </th>
                        <th scope="col">
                            Username <i class="fas fa-sort text-secondary"></i>
                        </th>
                        <th scope="col">
                            Nama <i class="fas fa-sort text-secondary"></i>
                        </th>
                        <th scope="col" class="text-primary">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < data.length; i++){ %>
                        <tr>
                            <td class="text-primary fw-semibold">
                                <%= (i+1) %>
                            </td>
                            <td>
                                <%= data[i].id_campaign %>
                            </td>
                            <td>
                                <%= data[i].jumlah_disalurkan %>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-link p-0 text-primary" title="View" aria-label="View user 3">
                                    <i class="fas fa-search"></i>
                                </button>
                                <button class="btn btn-link p-0 text-success" title="Edit" aria-label="Edit user 3">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>
                                <button class="btn btn-link p-0 text-danger" title="Delete" aria-label="Delete user 3">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
