<%- include('partials/login/_head') %>
    <div class="preloader-background">
        <div class="preloader-wrapper big active">
            <div id="loader-wrapper">
                <div id="loader"></div>
            </div>
        </div>
    </div>

    <section class="section-padding banner-wrapper login-alt banner-6 fullscreen-banner">
        <div class="container">
            <div class="login-wrapper">
                <div class="card-wrapper"></div>
                <div class="card-wrapper">
                    <h3 class="title">Login Untuk Donasi</h3>
                    <form action="/login" method="post">
                        <%- include('partials/login/_message') %>
                            <div class="input-container">
                                <input name="username" type="text" id="username" required="required" />
                                <label for="username">Username</label>
                                <div class="bar"></div>
                            </div>
                            <div class="input-container">
                                <input name="password" type="password" id="password" required="required" />
                                <label for="password">Password</label>
                                <div class="bar"></div>
                            </div>
                            <div class="button-container">
                                <button class="btn btn-lg btn-block waves-effect waves-light"
                                    type="submit">Login</button>
                                <!-- <a href="#." class="btn btn-lg btn-block waves-effect waves-light">Login</a> -->
                            </div>
                            <div class="footer"><a href="#">Forgot your password?</a></div>
                    </form>
                </div>
                <div class="card-wrapper alt">
                    <div class="toggle"></div>
                    <h1 class="title">Register
                        <div class="close"></div>
                    </h1>
                    <form action="/reg/next" method="post">
                        <div class="input-container">
                            <input name="nama" type="text" id="phone" required="required" />
                            <label for="phone">Your Name</label>
                            <div class="bar"></div>
                        </div>
                        <div class="input-container">
                            <input name="email" type="text" id="eem" required="required" />
                            <label for="eem">Your Email</label>
                            <div class="bar"></div>
                        </div>

                        <div class="button-container">
                            <button class="btn btn-lg btn-block white waves-effect waves-red"
                                type="submit">Lanjut</button>
                            <!-- <a href="#." class="btn btn-lg btn-block white waves-effect waves-red"></a> -->
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>

    <!-- jQuery -->
    <script src="/assets/js/jquery-2.1.3.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/materialize/js/materialize.min.js"></script>
    <script src="/assets/js/menuzord.js"></script>
    <script src="/assets/js/jquery.easing.min.js"></script>
    <script src="/assets/js/jquery.sticky.min.js"></script>
    <script src="/assets/js/smoothscroll.min.js"></script>
    <script src="/assets/js/jquery.stellar.min.js"></script>
    <script src="/assets/js/imagesloaded.js"></script>
    <script src="/assets/js/animated-headline.js"></script>
    <script src="/assets/js/scripts.js"></script>
    <script type="text/javascript">
        $(window).load(function () {
            $('.preloader-wrapper').fadeOut();
            $('.preloader-background').delay(350).fadeOut('slow');
        });

    </script>
    <script>
        $('.toggle').on('click', function () {
            $('.login-wrapper').stop().addClass('active');
        });

        $('.close').on('click', function () {
            $('.login-wrapper').stop().removeClass('active');
        });

    </script>
    <script>
        // Skrip ini jalan terus, tapi cuma hapus kalau ada elemen alertBox
        setTimeout(() => {
            const alertBox = document.getElementById('alertBox');
            if (alertBox) alertBox.remove(); // atau alertBox.style.display = 'none';
        }, 5000);
    </script>
    <%- include('partials/login/_foot') %>