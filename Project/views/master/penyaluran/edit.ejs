<%- include('../../partials/master/_head') %>
    <section class="section-padding grid-news">
        <div class="container" style="padding: 0 11.5% 0 11.5%;">
            <div class="flex items-center justify-center bg-gray-50">
                <div class="bg-white shadow-md rounded-lg w-full p-8 mx-auto">
                    <h1 class="text-3xl font-semibold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-file-alt mr-3 text-blue-600"></i> Edit Penyaluran
                    </h1>
                    <form class="space-y-6" action="/admin/penyaluran/update/<%= selectedCampaign.id_penyaluran %>"
                        method="POST" enctype="multipart/form-data">
                        <div>
                            <label for="title" class="block text-sm font-medium text-gray-700 mb-1">
                                Campaign Title <span class="text-red-500">*</span>
                            </label>
                            <select id="title" name="id_campaign" required
                                class="block w-full rounded-md border border-gray-300 bg-white px-4 py-2 text-gray-900 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 transition">
                                <option value="" disabled <%=!selectedCampaign ? 'selected' : '' %>>Select a Campaign
                                </option>
                                <% if (message) { %>
                                    <option value="" disabled>
                                        <%= message %>
                                    </option>
                                    <% } else { %>
                                        <% for(var i=0; i < data.length; i++){ %>
                                            <option value="<%= data[i].id_campaign %>"
                                                data-dana="<%= data[i].dana_terkumpul %>" <%=selectedCampaign &&
                                                selectedCampaign.id_campaign==data[i].id_campaign ? 'selected' : '' %>>
                                                <%= data[i].judul %>
                                            </option>
                                            <% } %>
                                                <% } %>
                            </select>



                            <input type="text" id="danaTerkumpul" name="dana_terkumpul" readonly
                                placeholder="Dana Terkumpul"
                                class="block w-full rounded-md border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 transition" />
                        </div>

                        <div>
                            <label for="uoa" class="block text-sm font-medium text-gray-700 mb-1">
                                Jumlah Donasi Disalurkan<span class="text-red-500">*</span>
                            </label>
                            <input type="text" value="<%= selectedCampaign.jumlah_disalurkan %>" id="uoa"
                                name="jumlah_disalurkan" required placeholder="Enter jumlah donasi disalurkan"
                                class="block w-full rounded-md border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 transition" />
                        </div>

                        <div>
                            <label for="date" class="block text-sm font-medium text-gray-700 mb-1">
                                Date Penyaluran <span class="text-red-500">*</span>
                            </label>
                            <input type="date"
                                value="<%= selectedCampaign.tanggal_penyaluran.toISOString().split('T')[0] %>" id="date"
                                name="tanggal_penyaluran" required
                                class="block w-full rounded-md border border-gray-300 px-4 py-2 text-gray-900 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 transition" />
                        </div>

                        <div>
                            <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
                                Keterangan <span class="text-red-500">*</span>
                            </label>
                            <textarea id="description" name="keterangan" rows="4" required
                                placeholder="Write information"
                                class="block w-full h-32 rounded-md border border-gray-300 px-4 py-2 text-gray-900 placeholder-gray-400 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 transition resize-y"><%= selectedCampaign.keterangan %></textarea>

                        </div>

                        <div>
                            <label for="attachment" class="block text-sm font-medium text-gray-700 mb-1">
                                Attachment
                            </label>
                            <% if (selectedCampaign.bukti_foto) { %>
                                <p class="text-sm text-gray-600 mb-1">File sebelumnya: <%= selectedCampaign.bukti_foto
                                        %>
                                </p>
                                <% } %>
                                    <input type="file" id="attachment" name="bukti_foto" accept="image/*"
                                        class="block w-full text-gray-700 file:border file:border-gray-300 file:rounded file:px-3 file:py-2 file:text-sm file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200 transition cursor-pointer" />
                                    <% if (selectedCampaign.bukti_foto) { %>
                                        <img src="/images/bukti_penyaluran/<%= selectedCampaign.bukti_foto %>"
                                            alt="Preview" class="w-80 mt-5 rounded-md shadow" />
                                        <% } %>
                        </div>
                        <!-- .pdf,.doc,.docx,.xls,.xlsx,.csv,.png,.jpg,.jpeg -->
                        <div class="flex justify-between items-center pt-4 border-t border-gray-200">
                            <a href="/admin/penyaluran"
                                class="text-blue-600 hover:underline font-medium flex items-center">
                                <i class="fas fa-arrow-left mr-2"></i> Back
                            </a>
                            <div class="flex space-x-4">
                                <button type="submit"
                                    class="px-6 py-2 rounded-md bg-blue-600 text-white font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-1 transition">
                                    Submit Penyaluran
                                </button>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
    </section>

    <script>
        const campaignSelect = document.getElementById('title');
        const danaInput = document.getElementById('danaTerkumpul');

        campaignSelect.addEventListener('change', function () {
            const selectedOption = this.options[this.selectedIndex];
            const dana = selectedOption.getAttribute('data-dana') || '';
            danaInput.value = dana;
        });

        // Trigger saat halaman dimuat kalau sudah ada selected (saat edit)
        window.addEventListener('DOMContentLoaded', function () {
            const selectedOption = campaignSelect.options[campaignSelect.selectedIndex];
            if (selectedOption && selectedOption.getAttribute('data-dana')) {
                danaInput.value = selectedOption.getAttribute('data-dana');
            }
        });
    </script>


    <%- include('../../partials/master/_foot') %>